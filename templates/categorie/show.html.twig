{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <!-- templates / categorie / show -->
    <h1>Les articles de la catégorie {{ categorie.nom }}. </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ categorie.nom }}</td>
            </tr>
        </tbody>
    </table>
    <a href="{{ path('app_categorie_index') }}">Revenir à la liste des catégories</a> 

    <!-- Liste des articles d'une catégorie  dans une table --> 
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <!-- th>Contenu</th -->
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        <!-- BOUCLE sur les articles -->
        {% for itemArticle in articles %}
            <tr>
                <td>{{ itemArticle.id }}</td>
                <td>{{ itemArticle.titre }}</td>
                <!-- td>{{ itemArticle.contenu }}</td -->
                <td>
                    <a href="{{ path('app_article_show', {'id': itemArticle.id}) }}">commentaires de cet article</a>               
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">aucun aticles pour cette catégorie</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>    

{% endblock %}
